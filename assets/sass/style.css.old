@import url(../../src/fonts/HelveticaNeueLTPro-Bd.otf);
* {
  margin: 0;
  padding: 0;
}

.bg_header {
  background-color: #0b3939;
  border-bottom: #d6aa3a solid 2px;
}
.bg_header .header {
  display: flex;
  max-width: 1200px;
  align-items: center;
}
.bg_header .header img {
  margin-left: 7rem;
  width: 165px;
  height: 120px;
  -o-object-fit: contain;
     object-fit: contain;
}
.bg_header .header ul {
  margin-left: 10rem;
  display: flex;
  font-size: 3rem;
}
.bg_header .header ul li {
  list-style: none;
  text-align: center;
}
.bg_header .header ul li a {
  color: #d6aa3a;
  display: block;
  text-decoration: none;
  padding: 2.5rem 5rem;
}
.bg_header .header ul li a:hover {
  text-decoration: underline;
}

.footer {
  border-top: #d6aa3a solid 2px;
  background-color: #0b3939;
  text-align: center;
}
.footer .footer h3 {
  color: #d6aa3a;
  font-size: 1rem;
  padding: 1rem;
}

main {
  background-image: url(../../src/img/bg5.png);
  /*accueil*/
}
main .img_presentation {
  display: flex;
}
main .img_presentation .img1 {
  -o-object-fit: contain;
     object-fit: contain;
  width: 30%;
  height: 300px;
  margin: 3rem 0 3rem 15rem;
}
main .img_presentation .img2 {
  -o-object-fit: contain;
     object-fit: contain;
  width: 10%;
  height: 300px;
  margin: 3rem 0;
}
main .img_presentation .img3 {
  -o-object-fit: contain;
     object-fit: contain;
  width: 30%;
  height: 300px;
  margin: 3rem 0;
}
main .presentation {
  font-size: 3rem;
  text-align: center;
  color: #d6aa3a;
}
main article {
  font-size: 1.5rem;
  padding: 5rem 15rem;
}
main article .atelier {
  margin: auto;
  text-align: justify;
  color: rgb(12, 66, 49);
}
main article .atelier h1 {
  margin: 2rem 0;
  text-decoration: underline;
  color: #d6aa3a;
}
main article .atelier .content {
  display: flex;
}
main article .atelier .content img {
  -o-object-fit: contain;
     object-fit: contain;
  width: 30%;
  height: 250px;
  border: #d6aa3a solid 2px;
}
main article .atelier .content p {
  padding-left: 2rem;
}

/*produits*/
.produits div {
  display: flex;
  flex-direction: column;
}
.produits div .imgNom {
  height: 100px;
  margin: 3rem auto;
  background-color: aquamarine;
  border: #d6aa3a 2px solid;
}
.produits div .img {
  height: 150px;
  margin: 3rem auto;
}
.produits div .desc {
  margin: auto;
  text-align: justify;
  color: #d6aa3a;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 1.5rem;
  padding: 3rem 25rem;
}

/*contact*/
.contact {
  display: flex;
  justify-content: space-around;
}
.contact .liste {
  margin: auto;
  padding-left: 7rem;
}
.contact .liste h2 {
  text-decoration: underline;
  padding: 3rem 0;
  color: #d6aa3a;
  font-size: 2rem;
}
.contact .liste h2 ul {
  color: #d6aa3a;
  font-size: 2rem;
}
.contact .liste h2 ul li {
  color: #0b3939;
  font-size: 1.5rem;
  padding: 0.5rem;
}
.contact iframe {
  margin: 12rem 12rem 10rem 2rem;
  border: #d6aa3a solid 2px;
}
